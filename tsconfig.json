{
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "src/setupTests.ts"]
}
